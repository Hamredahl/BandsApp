@model BandsApp.Web.Models.Band

<!DOCTYPE html>
<html>
<head>
    <title>@Model.Name - Details</title>
    <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@latest/css/pico.classless.min.css">
</head>
<body>
    <h2>@Model.Name</h2>

    <p>@Model.Description</p>

    <img src="~/images/@Model.Image" width="500" height="500" alt="Image of @Model.Name"/>

    <div>
        <ul>
            @foreach (var album in Model.Albums)
            {
                <li>@album</li>
            }
        </ul> 
    </div>

    <div></div><a href="/">⬅ Back to list</a></div>
</body>
</html>
